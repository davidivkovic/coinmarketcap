<Primitives:Window
  x:Class="CoinMarketCap.Views.CoinView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:coinmarketcap="clr-namespace:CoinMarketCap"
  xmlns:Primitives="clr-namespace:CoinMarketCap.Primitives"
  xmlns:s="clr-namespace:System;assembly=mscorlib"
  xmlns:fa5="http://schemas.fontawesome.com/icons/"
  mc:Ignorable="d"
  d:DesignHeight="450" d:DesignWidth="800"
  WindowStartupLocation="CenterScreen"
  Width="1300" Height="800"
  DataContext="{Binding RelativeSource={RelativeSource Self}}"
  Background="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#ffffff|#000000'}"
>
  <Primitives:Window.Resources>
    <BooleanToVisibilityConverter x:Key="BoolToVis" />
    <coinmarketcap:ToUpper x:Key="ToUpper" />
    <coinmarketcap:DecimalToShortCurrency x:Key="DecimalToShortCurrency" />
    <coinmarketcap:DecimalToVariableCurrency x:Key="DecimalToVariableCurrency" />
    <coinmarketcap:DayToFontWeight x:Key="DayToFontWeight" />
    <coinmarketcap:SelectedRangeToBackground x:Key="SelectedRangeToBackground" />
    <coinmarketcap:PercentageToText x:Key="PercentageToText" />
    <coinmarketcap:PercentageToBrush x:Key="PercentageToBrush" />
    <coinmarketcap:DecimalDivision x:Key="DecimalDivision" />
    <coinmarketcap:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    <coinmarketcap:CurrencyToVisibility x:Key="CurrencyToVisibility" />
    <coinmarketcap:DarkModeToBrush x:Key="DarkModeToBrush" />
    <s:String x:Key="usd">usd</s:String>
    <s:String x:Key="eur">eur</s:String>
  </Primitives:Window.Resources>
  <Grid>
    <Grid Panel.ZIndex="1" Visibility="{Binding LoadingVisibility}">
      <Grid 
        Background="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#ffffff|#000000'}"
        Opacity="{Binding LoadingOpacity}"
      />
      <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <fa5:SvgAwesome Name="LoadingIcon" Height="30" Width="30" Icon="Solid_CircleNotch" Spin="True"
                        SpinDuration="0.65" Foreground="Gray" />
        <TextBlock Name="LoadingTitle" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="18"
          Margin="0 10 0 0"
          Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#000000|#ffffff'}"
        />
        <TextBlock Name="LoadingDescription" FontWeight="Medium" Foreground="Gray" FontSize="14" Margin="0 10 0 20" />
        <Button HorizontalAlignment="Center" x:Name="DismissErrorButton" Command="{Binding DismissErrorCommand}">
          <Button.Style>
            <Style TargetType="{x:Type Button}">
              <Setter Property="Template">
                <Setter.Value>
                  <ControlTemplate TargetType="Button">
                    <Border Cursor="Hand" CornerRadius="5" Background="{TemplateBinding Background}" Padding="40 10">
                      <ContentPresenter />
                    </Border>
                  </ControlTemplate>
                </Setter.Value>
              </Setter>
              <Setter Property="Background" Value="#3861fb" />
              <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                  <Setter Property="Background" Value="#2c4cc7" />
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                  <Setter Property="Background" Value="#2c4cc7" />
                </Trigger>
              </Style.Triggers>
            </Style>
          </Button.Style>
          <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Medium" FontSize="14"
                     Foreground="White">
            Continue
          </TextBlock>
        </Button>
      </StackPanel>
    </Grid>
    <ScrollViewer Margin="0 2 0 0" HorizontalScrollBarVisibility="Auto">
      <StackPanel Margin="0 20" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal">
          <StackPanel>
            <DockPanel VerticalAlignment="Center" Margin="16 0 12 10">
              <Image 
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Width="180"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="/Assets/logo.png"
                Visibility="{Binding LightMode, Converter={StaticResource BoolToVis}}"
              />
              <Image
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Width="180"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="/Assets/logo_dark.png"
                Visibility="{Binding DarkMode, Converter={StaticResource BoolToVis}}"
              />
              <Border
                  CornerRadius="7" Padding="3"
                  HorizontalAlignment="Right"
                  BorderThickness="0.5"
                  BorderBrush="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#00ffffff|#555555'}"
                  Background="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#f8fafd|#161616'}"
              >
                <ItemsControl
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Margin="0 0 0 0"
                  ItemsSource="{Binding TimeRangeNames}">
                  <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                      <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                  </ItemsControl.ItemsPanel>
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                      <Button
                        Cursor="Hand"
                        Command="{Binding ChangeTabCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding Path=.}">
                        <Button.Style>
                          <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                              <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                  <Border Background="{TemplateBinding Background}" Padding="8" CornerRadius="8">
                                    <ContentPresenter />
                                  </Border>
                                </ControlTemplate>
                              </Setter.Value>
                            </Setter>
                            <Setter Property="Background">
                              <Setter.Value>
                                <MultiBinding Converter="{StaticResource SelectedRangeToBackground}">
                                  <Binding Path="." />
                                  <Binding Path="TimeRange" RelativeSource="{RelativeSource AncestorType=Window}" />
                                  <Binding Path="DarkMode" RelativeSource="{RelativeSource AncestorType=Window}" />
                                </MultiBinding>
                              </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                              <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{Binding DarkMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#ffffff|#2c2c2c'}" />
                              </Trigger>
                              <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="{Binding DarkMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#ffffff|#2c2c2c'}" />
                              </Trigger>
                            </Style.Triggers>
                          </Style>
                        </Button.Style>
                        <TextBlock
                          FontWeight="SemiBold"
                          Text="{Binding Path=Name}" 
                          Foreground="{Binding DarkMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#5c6a81|#ffffff'}"
                        />
                      </Button>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>
              </Border>
            </DockPanel>
            <DockPanel Margin="16 24 12 14">
              <StackPanel Margin="0 0 0 0" Orientation="Horizontal">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                  <StackPanel Orientation="Horizontal">
                    <Image
                      RenderOptions.BitmapScalingMode="HighQuality"
                      Height="30" Width="30"
                      VerticalAlignment="Center"
                      Source="{Binding CoinData.Image}" />
                    <TextBlock
                      VerticalAlignment="Center"
                      FontSize="15"
                      FontWeight="SemiBold"
                      Margin="8 0 0 0"
                      Text="{Binding CoinData.Name}"
                      Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#000000|#FFFFFF'}"
                    />
                    <Border VerticalAlignment="Center" Margin="10 3 0 0" Padding="5 4" CornerRadius="3"
                            Background="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#eff2f5|#2f2f2f'}">
                      <TextBlock
                        Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#58667E|#b3b9c5'}"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Text="{Binding CoinData.Symbol, Converter={StaticResource ToUpper}}" />
                    </Border>
                  </StackPanel>
                  <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Medium"
                    Margin="10 0"
                    Text="to" 
                    Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#000000|#FFFFFF'}"
                  />
                  <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                    <Viewbox Margin="0 -30 0 0" Height="1.3" Width="1.3">
                      <Canvas Width="1" Height="1">
                        <Path Fill="#16C784"
                              Data="M12 24C18.6274 24 24 18.6274 24 12C24 5.37258 18.6274 0 12 0C5.37258 0 0 5.37258 0 12C0 18.6274 5.37258 24 12 24Z" />
                        <Path Fill="White"
                              Data="M11.4758 19H12.5547L12.5598 17.7477C14.743 17.5781 15.9949 16.2875 16 14.4555C15.9949 12.5141 14.5038 11.6281 12.9364 11.2289L12.6005 11.1359L12.6209 8.01328C13.4351 8.16641 13.9593 8.69141 14.0407 9.47891H15.8575C15.827 7.73984 14.5547 6.47109 12.631 6.27422L12.6361 5H11.5573L11.5522 6.27422C9.64377 6.48203 8.26972 7.73984 8.27481 9.55C8.27481 11.1578 9.33842 12.082 11.0534 12.5578L11.5115 12.6836L11.4911 15.9922C10.5802 15.8391 9.92366 15.2812 9.85751 14.2914H8C8.07125 16.3422 9.38422 17.5617 11.4809 17.7477L11.4758 19ZM12.57 15.9922L12.5903 12.9898C13.5165 13.2797 14.1069 13.6625 14.112 14.4391C14.1069 15.2484 13.5013 15.8281 12.57 15.9922ZM11.5216 10.8406C10.8193 10.6 10.1781 10.2008 10.1883 9.42422C10.1934 8.71875 10.687 8.17188 11.542 8.01328L11.5216 10.8406Z" />
                      </Canvas>
                    </Viewbox>
                    <TextBlock
                      VerticalAlignment="Center"
                      FontSize="15"
                      FontWeight="SemiBold"
                      Margin="42 0 0 0"
                      Text="United States Dollar"
                      Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#000000|#FFFFFF'}"
                    />
                    <Border VerticalAlignment="Center" Margin="10 3 0 0" Padding="5 4" CornerRadius="3"
                            Background="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#eff2f5|#2f2f2f'}">
                      <TextBlock
                        Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#58667E|#b3b9c5'}"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Text="{Binding Currency, Converter={StaticResource ToUpper}}" />
                    </Border>
                    <StackPanel.Style>
                      <Style TargetType="StackPanel">
                        <Setter Property="Visibility">
                          <Setter.Value>
                            <MultiBinding Converter="{StaticResource CurrencyToVisibility}">
                              <Binding Path="Currency" />
                              <Binding Source="{StaticResource usd}" />
                            </MultiBinding>
                          </Setter.Value>
                        </Setter>
                      </Style>
                    </StackPanel.Style>
                  </StackPanel>

                  <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                    <Viewbox Margin="0 -30 0 0" Height="1.3" Width="1.3">
                      <Canvas Width="1" Height="1">
                        <Path Fill="#3861FB"
                              Data="M12 24C18.6274 24 24 18.6274 24 12C24 5.37258 18.6274 0 12 0C5.37258 0 0 5.37258 0 12C0 18.6274 5.37258 24 12 24Z" />
                        <Path Fill="White"
                              Data="M14.4964 10.2148H9.93795C10.3675 8.65779 11.4057 7.90494 12.7422 7.90494C13.7864 7.90494 14.5919 8.37262 15.1647 8.80608L16 7.10646C15.1169 6.39924 14.0191 6 12.7422 6C10.2064 6 8.29117 7.55133 7.70644 10.2148H6.47136L6 11.4297H7.53938C7.52745 11.6179 7.52148 11.8118 7.52148 12.0114C7.52148 12.1996 7.52745 12.3878 7.53938 12.5703H6.47136L6 13.8023H7.70644C8.29117 16.4601 10.2064 18 12.7422 18C13.9714 18 15.111 17.6407 15.9642 16.9335L15.1169 15.2338C14.5979 15.6331 13.7924 16.0951 12.7422 16.0951C11.3998 16.0951 10.3675 15.3593 9.93795 13.8023H12.778L13.3926 12.5703H9.74105C9.72912 12.3935 9.72315 12.2053 9.72315 12.0114C9.72315 11.8118 9.72912 11.6179 9.74105 11.4297H13.9177L14.4964 10.2148Z" />
                      </Canvas>
                    </Viewbox>
                    <TextBlock
                      VerticalAlignment="Center"
                      FontSize="15"
                      FontWeight="SemiBold"
                      Margin="38 0 0 0"
                      Text="Euro"
                      Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#000000|#FFFFFF'}"
                    />
                    <Border VerticalAlignment="Center" Margin="10 3 0 0" Padding="5 4" CornerRadius="3"
                            Background="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#eff2f5|#2f2f2f'}">
                      <TextBlock
                        Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#58667E|#b3b9c5'}"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Text="{Binding Currency, Converter={StaticResource ToUpper}}" />
                    </Border>
                    <StackPanel.Style>
                      <Style TargetType="StackPanel">
                        <Setter Property="Visibility">
                          <Setter.Value>
                            <MultiBinding Converter="{StaticResource CurrencyToVisibility}">
                              <Binding Path="Currency" />
                              <Binding Source="{StaticResource eur}" />
                            </MultiBinding>
                          </Setter.Value>
                        </Setter>
                      </Style>
                    </StackPanel.Style>
                  </StackPanel>
                </StackPanel>
              </StackPanel>
              <!--<Image Margin="120 0" Height="24" Width="24" RenderOptions.BitmapScalingMode="HighQuality"
                                Source="https://s2.coinmarketcap.com/static/cloud/img/converter.png"/>-->
              <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock VerticalAlignment="Center" FontSize="17" FontWeight="SemiBold"
                           Text="{Binding CoinData.CurrentPrice, Converter={StaticResource DecimalToVariableCurrency}}" />
                <Border Margin="10 0 0 0" VerticalAlignment="Center" CornerRadius="7" Padding="7"
                        Background="{Binding CoinData.PriceChangePercentage24H, Converter={StaticResource PercentageToBrush}}">
                  <TextBlock Foreground="White" FontWeight="Bold"
                             Text="{Binding CoinData.PriceChangePercentage24H, Converter={StaticResource PercentageToText}}" />
                </Border>
              </StackPanel>
            </DockPanel>
            <Grid
              MaxHeight="{Binding ActualHeight, ElementName=ChartPanel}"
              VerticalAlignment="Top"
              HorizontalAlignment="Left"
            >
              <Canvas Panel.ZIndex="100" RenderOptions.ClearTypeHint="Enabled">
                <Grid
                  Visibility="{Binding ElementName=ChartPanel, Path=IsMouseOver, Mode=OneWay, Converter={StaticResource BoolToVis}}">
                  <Border
                    x:Name="ChartTooltipWrapper"
                    BorderBrush="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#00ffffff|#555555'}"
                    BorderThickness="0.5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="103"
                    Width="260"
                    Padding="18 16"
                    CornerRadius="6"
                    Background="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#ffffff|#161616'}"
                  >
                    <Border.Effect>
                      <DropShadowEffect Color="Gray" ShadowDepth="0" BlurRadius="30" Opacity="0.15" />
                    </Border.Effect>
                  </Border>
                  <StackPanel
                    Height="71"
                    Width="224"
                    x:Name="ChartTooltip">
                    <Grid>
                      <TextBlock 
                        FontSize="11.5" 
                        FontWeight="SemiBold" 
                        Text="{Binding PriceAtPoint.Date}" 
                        Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#000000|#FFFFFF'}"
                      />
                      <TextBlock
                        FontSize="11"
                        FontWeight="SemiBold"
                        Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#808A9D|#b3b9c5'}"
                        HorizontalAlignment="Right"
                        Text="{Binding PriceAtPoint.Time}" />
                    </Grid>
                    <WrapPanel Margin="0 14 0 0">
                      <Ellipse Fill="{Binding ChartPointFill}" Margin="0 0 10 0" Width="10" Height="10" />
                      <TextBlock FontWeight="Medium" Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#808A9D|#b3b9c5'}">
                        Price:
                        <Run
                          Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#000000|#FFFFFF'}"
                          FontWeight="SemiBold"
                          Text="{Binding PriceAtPoint.Price, Converter={StaticResource DecimalToVariableCurrency}}" />
                      </TextBlock>
                    </WrapPanel>
                    <WrapPanel Margin="0 8 0 0">
                      <Viewbox Height="14" Margin="-2 0 8 0">
                        <Path StrokeThickness="4" Stroke="#5481ff"
                              Data="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                      </Viewbox>
                      <TextBlock FontWeight="Medium" Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#808A9D|#b3b9c5'}">
                        Vol 24h:
                        <Run
                          Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#000000|#FFFFFF'}"
                          FontWeight="SemiBold"
                          Text="{Binding PriceAtPoint.Volume, Converter={StaticResource DecimalToShortCurrency}}" />
                      </TextBlock>
                    </WrapPanel>
                  </StackPanel>
                </Grid>
              </Canvas>
              <StackPanel Orientation="Horizontal">
                <Grid HorizontalAlignment="Right" Margin="0 24 0 0">
                  <ItemsControl ItemsSource="{Binding YPrices}" Margin="0 0 0 0">
                    <ItemsControl.ItemTemplate>
                      <DataTemplate>
                        <Border
                          Margin="{Binding YAxisMargin, RelativeSource={RelativeSource AncestorType=Window}}"
                          Padding="14 0 0 0"
                        >
                          <TextBlock
                            Foreground="#8690a2"
                            FontSize="11"
                            FontWeight="Medium"
                            Margin="0 0 8 -8.25"
                            HorizontalAlignment="Right"
                            TextAlignment="Right"
                            Text="{Binding Path=.}" />
                        </Border>
                      </DataTemplate>
                    </ItemsControl.ItemTemplate>
                  </ItemsControl>

                  <Grid Margin="{Binding YOpenMargin}">
                    <Border
                      Name="OpenBorder"
                      CornerRadius="2"
                      Margin="0 -26 0 0"
                      HorizontalAlignment="Right"
                      Padding="9 3"
                      VerticalAlignment="Top"
                      Background="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#eff2f5|#2c2c2c'}"
                    >
                      <TextBlock
                        FontSize="11"
                        FontWeight="SemiBold"
                        Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#000000|#FFFFFF'}"
                        TextAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{Binding FormattedOpen}" />
                    </Border>
                  </Grid>

                  <Border
                    x:Name="YPointPricePanel"
                    Margin="-16 0 0 0"
                  >
                    <Border
                      Visibility="{Binding ElementName=ChartPanel, Path=IsMouseOver, Mode=OneWay, Converter={StaticResource BoolToVis}}"
                      CornerRadius="2"
                      Margin="0 -26 0 0"
                      HorizontalAlignment="Right"
                      Padding="9 3"
                      VerticalAlignment="Top"
                      Background="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#eff2f5|#2c2c2c'}"

                    >
                      <TextBlock
                        FontSize="11"
                        FontWeight="SemiBold"
                        Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#000000|#FFFFFF'}"
                        TextAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{Binding Path=YPointPrice}" />
                    </Border>
                  </Border>
                </Grid>
                <Border HorizontalAlignment="Left" Margin="0 8.5 0 0" BorderBrush="{Binding DarkMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#eff2f5|#292929'}" BorderThickness="1 0 0 0">
                  <Grid>
                    <StackPanel
                      Margin="0 20 0 0"
                      HorizontalAlignment="Left"
                      Width="{Binding ActualWidth, ElementName=ChartPanel}">
                      <ItemsControl ItemsSource="{Binding YPrices}">
                        <ItemsControl.ItemTemplate>
                          <DataTemplate>
                            <Grid Margin="{Binding YAxisMargin, RelativeSource={RelativeSource AncestorType=Window}}">
                              <Separator Background="{Binding DarkMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#eff2f5|#292929'}" />
                            </Grid>
                          </DataTemplate>
                        </ItemsControl.ItemTemplate>
                      </ItemsControl>
                    </StackPanel>

                    <Line Margin="{Binding YOpenMargin}"
                          StrokeThickness="1"
                          Stroke="#979da8"
                          StrokeDashArray="1 4"
                          X2="{Binding ActualWidth, ElementName=ChartPanel}" />

                    <Line
                      x:Name="VerticalChartLine"
                      Visibility="{Binding ElementName=ChartPanel, Path=IsMouseOver, Mode=OneWay, Converter={StaticResource BoolToVis}}"
                      X1="{Binding ChartPoint.X}"
                      X2="{Binding ChartPoint.X}"
                      Y2="{Binding ActualHeight, ElementName=ChartPanel}"
                      StrokeThickness="1"
                      Stroke="#979da8"
                      StrokeDashArray="1 4" />

                    <Line
                      x:Name="HorizontalChartLine"
                      Visibility="{Binding ElementName=ChartPanel, Path=IsMouseOver, Mode=OneWay, Converter={StaticResource BoolToVis}}"
                      X2="{Binding ActualWidth, ElementName=ChartPanel}"
                      StrokeThickness="1"
                      Stroke="#979da8"
                      StrokeDashArray="1 4"
                    />

                    <StackPanel Margin="0 0 0 0" Orientation="Horizontal">
                      <StackPanel Background="Transparent" x:Name="ChartPanel" MouseMove="ChartMouseMove">
                        <Grid Margin="0 24 0 0">
                          <Path
                            Margin="0 0 0 8"
                            x:Name="ChartPath"
                            IsHitTestVisible="False"
                            StrokeEndLineCap="Round"
                            StrokeThickness="2"
                            StrokeLineJoin="Bevel"
                            Fill="{Binding Fill}"
                            Stroke="{Binding Stroke}"
                            Data="{Binding Sparkline}" 
                          />
                          <Path
                            Visibility="{Binding ElementName=ChartPanel, Path=IsMouseOver, Mode=OneWay, Converter={StaticResource BoolToVis}}"
                            Fill="{Binding ChartPointFill}"
                            Stroke="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#FFFFFF|#2c2c2c'}"
                            StrokeThickness="2"
                          >
                            <Path.Data>
                              <EllipseGeometry Center="{Binding ChartPoint}" RadiusX="5" RadiusY="5" />
                            </Path.Data>
                          </Path>
                        </Grid>
                        <Path
                          Margin="-1 20 0 10"
                          VerticalAlignment="Bottom"
                          Data="{Binding VolumeSparkline}"
                          Stroke="#5481ff"
                          StrokeThickness="1.75"
                          StrokeEndLineCap="Round"
                          StrokeLineJoin="Bevel"
                        >
                          <Path.Fill>
                            <LinearGradientBrush StartPoint="0 0" EndPoint="0 1">
                              <GradientStop Offset="0" Color="{Binding DarkMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#dce3fe|#283d7a'}" />
                              <GradientStop Offset="1.6" Color="{Binding DarkMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#00FFFFFF|#000000'}" />
                            </LinearGradientBrush>
                          </Path.Fill>
                        </Path>
                        <Grid Margin="0 0 0 8">
                          <ItemsControl Margin="-10 -6 0 0" ItemsSource="{Binding Timesteps}">
                            <ItemsControl.ItemsPanel>
                              <ItemsPanelTemplate>
                                <UniformGrid Rows="1" />
                              </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                              <DataTemplate>
                                <TextBlock
                                  FontSize="11"
                                  FontWeight="{Binding Path=., Converter={StaticResource DayToFontWeight}}"
                                  Foreground="#8690a2"
                                  HorizontalAlignment="Center"
                                  Text="{Binding Path=.}" />
                              </DataTemplate>
                            </ItemsControl.ItemTemplate>
                          </ItemsControl>
                          <StackPanel Margin="0 -11 0 0" Height="21" >
                            <Border
                              Visibility="{Binding ElementName=ChartPanel, Path=IsMouseOver, Mode=OneWay, Converter={StaticResource BoolToVis}}"
                              Margin="0 0 0 0"
                              x:Name="XAxisTimestampPanel"
                              Background="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#eff2f5|#2c2c2c'}"
                              Padding="8 4"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              MinWidth="150"
                              CornerRadius="2"
                            >
                              <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="11"
                                FontWeight="Medium"
                                Foreground="{Binding DarkMode, Converter={StaticResource DarkModeToBrush}, ConverterParameter='#000000|#FFFFFF'}"
                              >
                                <Run Text="{Binding PriceAtPoint.Date}" />
                                <Run Text="{Binding PriceAtPoint.Time}" />
